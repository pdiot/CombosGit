<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ensemble_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pierre.combos.ComboDetails"
    tools:showIn="@layout/activity_combo_details"
    android:orientation="vertical"
    android:background="@color/darkBlue">

    <LinearLayout  android:id="@+id/Drawing"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout            android:id="@+id/Drawing1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="5"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:background="#2a4268"
            android:tag="Drawing1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >


        </LinearLayout>
        <LinearLayout            android:id="@+id/Drawing2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="5"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:background="#2a4268"
            android:tag="Drawing2"
            app:layout_constraintTop_toBottomOf="@+id/Drawing1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            >

        </LinearLayout>
        <LinearLayout            android:id="@+id/Drawing3"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="5"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:background="#2a4268"
            android:tag="Drawing3"
            app:layout_constraintTop_toBottomOf="@+id/Drawing2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            >

        </LinearLayout>
        <LinearLayout            android:id="@+id/Drawing4"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="5"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:background="#2a4268"
            android:tag="Drawing4"
            app:layout_constraintTop_toBottomOf="@+id/Drawing3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            >

        </LinearLayout>
        <LinearLayout            android:id="@+id/Drawing5"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="5"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:background="#2a4268"
            android:tag="Drawing5"
            app:layout_constraintTop_toBottomOf="@+id/Drawing4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            >

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/paleBlue"
        android:tag="sep"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="?android:buttonBarStyle">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Delete"
                android:onClick="deleteComboDB"
                style="?android:buttonBarButtonStyle"
                android:textColor="@color/white"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/paleBlue"
                android:tag="sep"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Edit"
                android:onClick="Edit"
                style="?android:buttonBarButtonStyle"
                android:textColor="@color/white"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/paleBlue"
                android:tag="sep"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Back"
                android:onClick="getBack"
                style="?android:buttonBarButtonStyle"
                android:textColor="@color/white"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/paleBlue"
                android:tag="sep"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Home"
                android:onClick="ToHome"
                style="?android:buttonBarButtonStyle"
                android:textColor="@color/white"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/paleBlue"
            android:tag="sep"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            style="?android:buttonBarStyle">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3">
                <EditText   android:id="@+id/combo_tag"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/paleBlue"
                    android:tag="sep"/>

                <EditText   android:id="@+id/combo_damage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:inputType="number"
                    />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/paleBlue"
                android:tag="sep"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"/>

            <Button android:id="@+id/updateBttn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Update"
                android:onClick="updateComboDB"
                style="?android:buttonBarButtonStyle"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>